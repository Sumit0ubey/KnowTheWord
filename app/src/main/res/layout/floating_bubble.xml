<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:padding="4dp">

    <!-- Pulse ring animation background -->
    <View
        android:id="@+id/pulseRing"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_pulse_ring"
        android:visibility="invisible" />

    <!-- Main bubble -->
    <androidx.cardview.widget.CardView android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#6C63FF"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/bubbleIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/audio_icon"
            app:tint="@android:color/white" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
